.ui.segment(id="{$_name}" class="{$class}")
    {Pannel}
    .ui.stackable.equal.width.grid(class=" {$class} ")
        .column {$grid_buttons}
        .right.aligned.column
            {$quick_search}
            i.search.icon
    {/Pannel}
    table.ui.striped.table
        {header}
        thead
            {cols}{col}
            th(id="{$employee_sortid}")
                span Employee {$employee_sort}
            th(id="{$direction_sortid}")
                span In Time {$direction_sort}
            th(id="{$time_sortid}" data-hide="phone")
                span Out Time {$time_sort}
            th
                span In/Out
            th
            {/}{/}
        {/}
        {$subheader}

        tbody
            {rows}{row}
            tr(class="{$odd_even}" data-id="{$id}")
                {cols}
                td
                    h5.ui.image.header
                        {avatar}
                        img(alt='', src='{image}img/samples/scarlet-159.png{/}')
                        {/}
                        div.content
                            .user-link.do-view-employee-movement(href='#' data-id="{$id}"){$name}
                td
                  strong(class = "text-{$in_color}") {$first_in}  
                td
                  strong(class = "text-{$out_color}") {$last_out}
                td
                  {$is_in}
                  {$is_out}
                td                              
                {/}
            {/}{/}
            {not_found}
            div.row
                .col-md-12.text-center.alert.alert-warning(role="alert")
                    span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
            {/}

        {totals}
        tfoot
            tr(class="totals")
                {cols}{col}
                <td {$tdparam}>
                {$content}
                </td>
                {/}{/}
        {/}
        {$Paginator}
