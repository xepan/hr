.xepan-grid(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.atk-actions(class=" {$class} ")
        div.filter-block( style="100%")
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                span(class="form-control pull-left")|{$quick_search}
    {/Pannel}
    .main-box-body.clearfix.table
        {$subheader}
        .main-box-body.clearfix.table
            .main-box.clearfix
            {cols}
            {rows}{row}
            div.col-md-3.small
                .infographic-box.merged.merged-top.pull-left
                  i(class="fa {$icon-class}")
                  span.small(class="{$text-class}" style="font-size: 15px;") {$in_at}
                  span.headline.text-small.text-muted {$name}
            {/}
            {/}{/}
            {not_found}
            div.row
                .col-md-12.text-center.alert.alert-warning(role="alert")
                    span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
            {/}

        {totals}
        tfoot
            tr(class="totals")
                {cols}{col}
                <td {$tdparam}>
                {$content}
                </td>
                {/}{/}
        {/}
    {$Paginator}
    style.
      .infographic-box.merged{
        border-right: 0px !important;
      }
    