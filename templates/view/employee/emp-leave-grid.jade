.ui.segment(id="{$_name}" class="{$class}")
    {Pannel}
    .ui.stackable.equal.width.grid(class=" {$class} ")
        .column {$grid_buttons}
        .right.aligned.column
            {$quick_search}
            i.search.icon
    {/Pannel}
    table.ui.very.basic.collapsing.celled.table
        {header}
        thead
            {cols}{col}
            th
                span Leave
            th
                span Carried Forward (Unit)
            th
                span Carried Forward (Monthly)
            th
                span No. Leave
            th
                span Unit
            th
                span Allow Over Quota
            th
            {/}{/}
        {/}
        {$subheader}
        tbody
            {rows}{row}
            tr(class="{$odd_even}" data-id="{$id}")
                {cols}
                td.ui.image.header
                    .content {$leave}
                        .sub.header {$type}
                td
                    {$is_unit_carried_forward}
                td
                    {$is_yearly_carried_forward}
                td
                    {$no_of_leave}   
                td
                    {$unit}
                td
                    {$allow_over_quota}  
                td
                    {$edit}
                    {$delete}
                
                {/}
            {/}{/}
            {not_found}
            div.row
                .col-md-12.text-center.alert.alert-warning(role="alert")
                    span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
            {/}

            {totals}
            tfoot
                tr(class="totals")
                    {cols}{col}
                    <td {$tdparam}>
                    {$content}
                    </td>
                    {/}{/}
            {/}
        {$Paginator}