.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block( style="100%")
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                span(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix.table
        table.table.user-list.table-hover(style="width:100%")
            {header}
            thead
                tr
                    {cols}{col}
                    th(id="{$sortid}")
                      a(href="javascript:void(0)")| User
                        {$descr}
                        {sort}
                        span(class="{$sorticon}")
                        {/}
                    th(id="{$sortid}")
                      a(href="javascript:void(0)")| Date Of Joining
                        {$descr}
                        {sort}
                        span(class="{$sorticon}")
                        {/}
                    th(id="{$sortid}")
                      a(href="javascript:void(0)")| Email
                        {$descr}
                        {sort}
                        span(class="{$sorticon}")
                        {/}
                    th
                    th
                    {/}{/}    
            {/}
            {$subheader}

            tbody
                {rows}{row}
                tr(class="{$odd_even}" data-id="{$id}")
                    {cols}
                    td
                      {avatar}
                      img(alt='', src='{image}img/samples/scarlet-159.png{/}')
                      {/}
                      a.user-link(href='{url}index.php?page=xepan_hr_employeedetail&contact_id={$id}{/}') {first_name}Scarlett{/} {last_name}Johansson{/}
                      span.user-subhead {$department} / {$posts}
                    td
                      | {doj}2013/08/08{/}
                    td
                      a(href='#') 
                        {emails_str}mila@kunis.com{/}
                    td
                        {$action}
                    td(style="width: 15%;")
                        {$edit}
                        {$delete}
                        {/}
                {/}{/}
                {not_found}
                div.row
                    .col-md-12.text-center.alert.alert-warning(role="alert")
                        span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
                {/}

            {totals}
            tfoot
                tr(class="totals")
                    {cols}{col}
                    <td {$tdparam}>
                    {$content}
                    </td>
                    {/}{/}
            {/}
        {$Paginator}
