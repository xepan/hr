.ui.segment(id="{$_name}" class="{$class}")
    {Pannel}
    .ui.stackable.equal.width.grid(class=" {$class} ")
        .column {$grid_buttons}
        .right.aligned.column
            {$quick_search}
            i.search.icon
    {/Pannel}
    table.ui.striped.table
        {header}
        thead
            {cols}{col}
            th(id="{$name_sortid}")
                span Name {$name_sort}
            th(data-hide="phone")
                span Narration
            th 
            {/}{/}
        {/}
        {$subheader}

        tbody
            {rows}{row}
            tr(class="{$odd_even}" data-id="{$id}")
                {cols}    
                td
                  h5.ui.image.header
                        {avatar}
                        img(alt='', src='{image}img/samples/scarlet-159.png{/}')
                        {/}
                        div.content
                            .user-link.do-view-affiliate(href='#',data-id="{$id}")  {name}Name{/}
                            div.sub.header
                                .user-subhead [{organization}{/}] 
                td
                    {$narration}    
                td
                    {$action}
                td(style="width: 15%;")
                    {$edit}
                    {$delete}
                
                {/}
            {/}{/}
            {not_found}
            div.row
                .col-md-12.text-center.alert.alert-warning(role="alert")
                    span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
            {/}

        {totals}
        tfoot
            tr(class="totals")
                {cols}{col}
                <td {$tdparam}>
                {$content}
                </td>
                {/}{/}
        {/}
        {$Paginator}
