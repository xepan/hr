.ui.segment(id="{$_name}" class="{$class}")
    {Pannel}
    .ui.stackable.equal.width.grid(class=" {$class} ")
        .column {$grid_buttons}
        .right.aligned.column
            {$quick_search}
            i.search.icon
    {/Pannel}
    table.ui.striped.table
        {header}
        thead
            {cols}{col}
            th(id="{$name_sortid}")
                span Post {$name_sort}
            th(id="{$department_id_sortid}")
                span Department {$department_id_sort}
            th(id="{$parent_post_sortid}")
                span Report to {$parent_post_sort}
            th( data-hide="phone")
                span Schedule Time
            th( data-hide="phone")
                span E-mail
            th(id="{$employee_count_sortid}" data-hide="phone")
                span Employee {$employee_count_sort}
            th
            th
            {/}{/}
        {/}
        {$subheader}
        tbody
            {rows}{row}
            tr(class="{$odd_even}" data-id="{$id}")
                {cols}
                td
                     {$name}
                td
                     {$department}
                td
                     {$parent_post}
                td
                    small In_Time : {$in_time}
                    .ui.fitted.divider
                    small Out_Time : {$out_time}
                td
                  a.emails-accesible(data-type="checklist" data-value="{$existing_permitted_emails}" data-title="Permitted Emails" data-pk="{$id}" style= "cursor:pointer; cursor: hand;")
                td
                  a.do-view-post-employees(href='#' data-id="{$id}")
                    |  {$employee_count}
                td
                    | {$action}
                td(style="width: 15%;")
                    {$edit}
                    {$delete}
                
                {/}
            {/}{/}
            {not_found}
            div.row
                .col-md-12.text-center.alert.alert-warning(role="alert")
                    span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
            {/}

            {totals}
            tfoot
                tr(class="totals")
                    {cols}{col}
                    <td {$tdparam}>
                    {$content}
                    </td>
                    {/}{/}
            {/}
        {$Paginator}