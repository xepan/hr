#user-profile
  .col-lg-3.col-md-4.col-sm-4
    {$contact_view}
  .col-lg-9.col-md-8.col-sm-8
    .main-box.clearfix
      .tabs-wrapper.profile-tabs
        ul.nav.nav-tabs
          li.active
            a(data-toggle='tab', href='#tab-portfolio') Portfolio
          li
            a(data-toggle='tab', href='#tab-activity') Activity
          li
            a(data-toggle='tab', href='#tab-documents') Documents
          li
            a(data-toggle='tab', href='#tab-chat') Personal
        .tab-content
          #tab-portfolio.tab-pane.fade.in.active
            {portfolio_view}Please Save Basic Information First{/}
           #tab-activity.tab-pane.fade
            {$activity_view}
          #tab-documents.tab-pane.clearfix.fade
            {$document_view}
          #tab-chat.tab-pane.fade
            {$personal_info}                       